<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigAtivity">

    <EditText
        android:id="@+id/etxtURL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Introduce la URL..."
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnURL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="GUARDAR URL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxtURL" />

    <EditText
        android:id="@+id/etxtCorreo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Introduce el correo electrÃ³nico.."
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnURL" />

    <EditText
        android:id="@+id/etxtAsunto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Intruce el asunto"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/etxtCorreo"
        app:layout_constraintStart_toStartOf="@+id/etxtCorreo"
        app:layout_constraintTop_toBottomOf="@+id/etxtCorreo" />

    <EditText
        android:id="@+id/etxtMensaje"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Introuce el mensaje"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/etxtAsunto"
        app:layout_constraintStart_toStartOf="@+id/etxtAsunto"
        app:layout_constraintTop_toBottomOf="@+id/etxtAsunto" />

    <Button
        android:id="@+id/btnCorreo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="GUARDAR CORREO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxtMensaje" />
</androidx.constraintlayout.widget.ConstraintLayout>